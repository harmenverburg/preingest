  "components": {
    "schemas": {
      "BodyChecksum": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "checksumType": {
            "type": "string",
            "nullable": true
          },
          "inputChecksumValue": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "BodySettings": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "description": {
            "type": "string",
            "nullable": true
          },
          "checksumType": {
            "type": "string",
            "nullable": true
          },
          "checksumValue": {
            "type": "string",
            "nullable": true
          },
          "preservicaTarget": {
            "type": "string",
            "nullable": true
          },
          "preservicaSecurityTag": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "ValidationActionType": {
        "type": "string",
        "enum": [
          "ContainerChecksumHandler",
          "ExportingHandler",
          "ReportingPdfHandler",
          "ReportingDroidXmlHandler",
          "ReportingPlanetsXmlHandler",
          "ProfilesHandler",
          "EncodingHandler",
          "UnpackTarHandler",
          "MetadataValidationHandler",
          "NamingValidationHandler",
          "GreenListHandler",
          "ExcelCreatorHandler",
          "ScanVirusValidationHandler",
          "SidecarValidationHandler",
          "SipCreatorHandler",
          "TransformationHandler"
        ]
      },
      "BodyPlan": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "actionName": {
            "$ref": "#/components/schemas/ValidationActionType"
          },
          "continueOnFailed": {
            "type": "boolean"
          },
          "continueOnError": {
            "type": "boolean"
          }
        }
      },
      "BodyExecutionPlan": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "workflow": {
            "type": "array",
            "nullable": true,
            "items": {
              "$ref": "#/components/schemas/BodyPlan"
            }
          }
        }
      },
      "BodyNewAction": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "nullable": true
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "result": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "BodyUpdate": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "result": {
            "type": "string",
            "nullable": true
          },
          "summary": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "BodyMessage": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "message": {
            "type": "string",
            "nullable": true
          }
        }
      },
      "BodyEventMessageBody": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "eventDateTime": {
            "type": "string",
            "format": "date-time"
          },
          "sessionId": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "state": {
            "type": "string",
            "nullable": true
          },
          "message": {
            "type": "string",
            "nullable": true
          },
          "hasSummary": {
            "type": "boolean"
          },
          "processed": {
            "type": "integer",
            "format": "int32"
          },
          "accepted": {
            "type": "integer",
            "format": "int32"
          },
          "rejected": {
            "type": "integer",
            "format": "int32"
          },
          "start": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "end": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        }
      }
    }
  }
