<?xml version="1.0"?>
<webapp xmlns="http://www.armatiek.com/xslweb/webapp" xmlns:xs="http://www.w3.org/2001/XMLSchema"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.armatiek.com/xslweb/webapp ../../config/xsd/xslweb/webapp.xsd">

  <title>Noord-Hollands Archief Pre-ingestapplicatie</title>
  <description>Noord-Hollands Archief Pre-ingestapplicatie</description>
  <development-mode>false</development-mode>
  <max-upload-size>10</max-upload-size>

  <!-- Resources to serve straight away: -->
  <resources>
    <resource pattern="/favicon.ico" media-type="image/x-icon" duration="P7DT0H0M0S"/>
    <resource pattern="/robots.txt" media-type="text/plain" duration="P1DT0H0M0S"/>
    <resource pattern="/images/.+\.png" media-type="image/png"/>
    <resource pattern="/images/.+\.gif" media-type="image/gif"/>
    <resource pattern="/images/.+\.(jpg|jpeg)" media-type="image/jpg"/>
    <resource pattern="/scripts/.+\.js" media-type="text/javascript"/>
    <resource pattern="/css/.+\.css" media-type="text/css"/>
  </resources>

  <parameters>
    <!-- Make sure uri-like parameters are properly uri-encoded! -->
    
    <!-- Main data dir: -->
    <parameter name="data-uri-prefix" type="xs:string">
      <value>file:/data/</value>
    </parameter>
    <parameter name="data-uri-prefix-devmode" type="xs:string">
      <value>file:/home/pieter/noord-hollandsarchief/data/</value>
    </parameter>
    
    <!-- The value for preingest-host-plus-port should correspond with network name and internal Docker port
         as defined in the docker-compose yaml file.
    -->
    <parameter name="preingest-scheme-host-port" type="xs:string">
      <value>http://preingest:80</value>
    </parameter>
    
    <!-- Swagger settings, also used by the gui. Relative to main data dir: -->
    <parameter name="swagger-json-uri" type="xs:string">
      <value>etc/swagger/swagger.json</value>
    </parameter>
    
    <parameter name="archives-file-glob" type="xs:string">
      <value>*.tar</value>
    </parameter>
  </parameters>
</webapp>
